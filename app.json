{
  "expo": {
    "name": "Game Master",
    "slug": "gamemaster",
    "scheme": "gamemaster",
    "version": "1.0.0",
    "userInterfaceStyle": "automatic",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2b1a14"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gmcol.gamemaster"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2b1a14"
      },
      "permissions": [],
      "blockedPermissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.gmcol.gamemaster"
    },
    "platforms": ["ios", "android"],
    "plugins": ["expo-router", "expo-font", "expo-image-picker"]
  }
}
